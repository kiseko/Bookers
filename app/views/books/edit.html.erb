<section class="edit">
  <h2>Editing Book</h2>
  <%= form_with model:@book, url: book_path(@book.id), local:true do |f| %>
  
  <% if @book.errors.any? %>
        <div class="error-box">
          <p class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:<p>
          <ul class="error-message">
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>
  <div class="submit"><%= f.submit "Update Book" %></div>
  <% end %>
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>
</section>