<section class="edit">
  <h1>Editing Book</h1>
  <%= form_with model:@book, url: book_path(@book.id), local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>
  <div class="submit"><%= f.submit "Update Book" %></div>
  <% end %>
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>
</section>