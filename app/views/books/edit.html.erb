<h1>Editing Book</h1>
<%= form_with model:@book, url: book_path(@book.id), local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<div><%= f.submit "Update Book" %></div>
<% end %>
<%= link_to "show", book_path(@book.id) %>
<%= link_to "back", books_path %>