<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>show</td>
      <td>edit</td>
      <td><%= link_to "destroy", delete_book_path(book.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, url: books_path, local:true do |f| %>
<p>title</p>
<%= f.text_field :title %>
<p>body</p>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>