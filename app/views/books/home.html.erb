<div class="home">
  <section class="index">
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>title</th>
          <th>body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", delete_book_path(book.id), method: :delete, "data-confirm" => "Are you shure?"  %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>

  <section class="new-book">
    <h2>New book</h2>
    <%= form_with model:@book, url: books_path, local:true do |f| %>

     <% if @book.errors.any? %>
        <div class="error-box">
          <p class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:<p>
          <ul class="error-message">
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <label>Title</label>
    <%= f.text_field :title %>
    <label>Body</label>
    <%= f.text_area :body %>
    <div class="submit"><%= f.submit "Create Book" %></div>
    <% end %>
  </section>
</div>